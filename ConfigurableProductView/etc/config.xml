    <default>
        <configurableproductview>
            <general>
                <enableModule>1</enableModule>
                <theme>grid</theme>
                <color>1</color>
                <resetbtn>Reset</resetbtn>
                <showtierprice>1</showtierprice>
                <addtocartLabel>Add to Cart</addtocartLabel>
                <qty>Qty</qty>
                <totallabel>Total</totallabel>
            </general>
        </configurableproductview>
    </default>
</config>
